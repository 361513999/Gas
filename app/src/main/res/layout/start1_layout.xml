<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh"
        >
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/back_act"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/nav_grp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:background="@mipmap/nav_wire"
                android:padding="0.5dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/nav_0"
                    style="@style/nav_btn"
                    android:tag="0"
                    android:background="@drawable/nav_left_btn"
                    android:text="预约类任务" />

                <RadioButton
                    android:id="@+id/nav_1"
                    style="@style/nav_btn"
                    android:tag="1"
                    android:background="@drawable/nav_right_btn"
                    android:text="计划类任务" />
            </RadioGroup>

        </LinearLayout>
        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/icon_seach"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@mipmap/line_gray"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/market_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/market_group_item0"
                style="@style/_category_radiobtn"
                android:drawableLeft="@mipmap/icon_tieku"
                android:text="任务状态" />
            <RadioButton
                android:id="@+id/market_group_item1"
                style="@style/_category_radiobtn"
                android:drawableLeft="@mipmap/icon_tieku"
                android:text="小区名" />

            <RadioButton
                android:id="@+id/market_group_item2"
                style="@style/_category_radiobtn"
                android:drawableLeft="@mipmap/icon_tieku"
                android:text="是否隐患" />
            <RadioButton
                android:id="@+id/market_group_item3"
                style="@style/_category_radiobtn"
                android:drawableLeft="@mipmap/icon_tieku"
                android:text="排序" />
        </RadioGroup>
        <View
            android:id="@+id/drop"
            android:layout_width="match_parent"
            android:background="@mipmap/line_gray"
            android:layout_height="1dp"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/get_layout"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"

                android:layout_above="@+id/ine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/get_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:button="@drawable/reser_nor_cb_ine"/>
                <TextView
                    android:id="@+id/get_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/get_sure"
                    android:layout_centerVertical="true"
                    android:text="取消"
                    android:gravity="center"
                    android:ems="4"
                    android:textSize="13sp"
                    android:paddingTop="3dp"
                    android:layout_marginRight="8dp"
                    android:paddingBottom="3dp"
                    android:background="@color/cancle"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/get_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="领取"
                    android:gravity="center"
                    android:ems="4"
                    android:textSize="13sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/common_org_act"
                    android:textColor="@color/font_normal"/>
            </RelativeLayout>
            <View
                android:id="@+id/ine"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_n"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.hhkj.gas.www.widget.PullToRefreshView
                    android:id="@+id/pull_to_refresh_list"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:focusableInTouchMode="true"
                    android:layout_height="match_parent">
                    <ListView
                        android:id="@+id/gas_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:listSelector="@color/no_color"
                        android:divider="@color/no_color"
                        android:dividerHeight="6dp"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"/>
                </com.hhkj.gas.www.widget.PullToRefreshView>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/head_btn"
                    android:tag="0"
                    android:layout_width="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="指派\n任务"
                    android:textSize="18sp"
                    android:textColor="@color/font_normal"
                    android:gravity="center"
                    android:background="@drawable/head_act"
                    android:layout_height="100dp" />
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>