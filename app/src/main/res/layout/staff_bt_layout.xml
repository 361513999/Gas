<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_heigh">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/back_act" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/print"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_btn_blue"
                android:ems="12"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="打印单据"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.hhkj.gas.www.widget.MyScroll
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/font_normal"
                    android:text="@string/staff_view_item0"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/font_normal"
                    android:text="@string/staff_view_item1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/font_normal"
                    android:text="工作编号"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_detail_bord"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="客户"

                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />

                        <TextView
                            android:id="@+id/item2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="电话"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/item3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="预约时间"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:id="@+id/item4"
                            android:text="客户地址"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="5dp"
                            android:text="序号"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="项目"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:ems="5"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="检查情况"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <com.hhkj.gas.www.widget.InScrollListView
                        android:id="@+id/item5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@color/no_color"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"
                        android:divider="@color/detail_line"
                        android:dividerHeight="1dp" />
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/detail_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="5dp"
                            android:text="序号"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:padding="5dp"
                            android:text="燃气表"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="品牌型号"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:ems="2"
                            android:padding="5dp"
                            android:text="机表读数"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="5"
                            android:padding="5dp"
                            android:text="运行情况"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <com.hhkj.gas.www.widget.InScrollListView
                        android:id="@+id/item6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@color/no_color"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"
                        android:divider="@color/detail_line"
                        android:dividerHeight="1dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="5dp"
                            android:text="序号"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="4"
                            android:padding="5dp"
                            android:text="燃气具"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="安装位置"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/detail_line" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="5"
                            android:padding="5dp"
                            android:text="运行情况"
                            android:gravity="center"
                            android:textColor="@color/font_normal"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <com.hhkj.gas.www.widget.InScrollListView
                        android:id="@+id/item7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@color/no_color"
                        android:background="@color/no_color"
                        android:cacheColorHint="@color/no_color"
                        android:divider="@color/detail_line"
                        android:dividerHeight="1dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/font_normal"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:text="检验结果:合格"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/detail_line" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/font_normal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="施工申明:上述项目已完工,并检验合格。"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/font_normal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:text="施工员签名:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/font_normal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="3dp"
                        android:text="客户申明:本人确认上述工程已完成,承诺遵守政府相关管道燃气的法律、法规和规章,并依照珠海港兴管道天然气有限公司的相关指引,安全使用管道燃气。"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/font_normal"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="5dp"
                        android:text="客户签名:"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:text="@string/staff_view_item2"
                    android:textColor="@color/font_light"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:text="服务热线:7718888      抢险电话:2128866"
                    android:textColor="@color/font_light"/>
            </LinearLayout>
        </com.hhkj.gas.www.widget.MyScroll>
    </LinearLayout>
</LinearLayout>