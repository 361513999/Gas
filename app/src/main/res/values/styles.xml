<resources>

    <style name="ThemeActivity" mce_bogus="1">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- activity动画 -->
    <style name="AnimationActivity" mce_bogus="1">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:taskOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:taskCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/push_left_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/push_left_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/push_right_in</item>
        <item name="android:taskToBackExitAnimation">@anim/push_right_out</item>
    </style>
    <!--圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <style name="_category_radiobtn">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawableRight">@drawable/_list_radio_right_btn</item>
        <item name="android:textColor">@color/_radiobtn_text</item>
        <item name="android:button">@null</item>
    </style>

    <style name="nav_btn">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/nav_top_text</item>
        <item name="android:button">@null</item>
    </style>
    <!--预约列表文字统一管理-->
    <style name="nor_item_txt">
        <item name="android:textColor">@color/font_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--load-->
    <style name="load_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:windowAnimationStyle">@style/config_pop_anim</item>-->
    </style>

    <style name="head_pop_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/no_color</item>
        <item name="android:windowBackground">@color/no_color</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--详情页基本信息-->
    <style name="de_item_txt">
        <item name="android:textColor">@color/font_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
