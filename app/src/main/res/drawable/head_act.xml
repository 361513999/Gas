<?xml version="1.0" encoding="utf-8"?>
<!-- 主页菜单的青菜selector之一 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点中时的 -->
    <item android:drawable="@mipmap/nav_icon_back" android:state_pressed="true"/>
    <!-- 有焦点时的 -->
    <item android:drawable="@mipmap/nav_icon_back" android:state_focused="true"/>
    <!-- 选中时字体 -->
    <item android:drawable="@mipmap/nav_icon_back" android:state_enabled="false"/>
    <!-- 默认的 -->
    <item android:drawable="@mipmap/nav_icon_back"/>

</selector>